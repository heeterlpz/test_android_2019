<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nyamori.mytestapplication.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextureView
            android:id="@+id/texture_view_after_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/with_image_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="withImageReader-FPS:"
            android:textColor="@color/colorAccent"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextureView
            android:id="@+id/m_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/with_OpenGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="withOpenGL-FPS:"
            android:textColor="@color/colorAccent"/>
    </FrameLayout>
</LinearLayout>
